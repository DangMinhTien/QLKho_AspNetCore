@page
@model QLKHO.Areas.Admin.Pages.Users.SetPasswordModel
@using QLKHO.Areas.Identity.Pages.Account.Manage
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    //ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Đặt lại mật khẩu cho người dùng: @Model.user.UserName</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post" asp-route-userid="@Model.user.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Đặt mật khẩu</button>
        </form>
        <a asp-page="./Index">Danh sách các thành viên</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}