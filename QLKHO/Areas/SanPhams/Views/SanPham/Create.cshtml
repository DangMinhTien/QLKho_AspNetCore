@model QLKHO.Areas.SanPhams.Controllers.SanPhamController.InputModel
@{
    ViewData["Title"] = "Create";
}
<partial name="_AlertMessage" model="@TempData["thongbao"]"></partial>
<h1>Tạo sản phẩm mới</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenSp" class="control-label"></label>
                <input asp-for="TenSp" class="form-control" />
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaBan" class="control-label"></label>
                <input asp-for="GiaBan" class="form-control" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpLoader" class="control-label"></label>
                <input id="file_upload" asp-for="FileUpLoader" class="form-control" />
                <span asp-validation-for="FileUpLoader" class="text-danger d-block"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ảnh sản phẩm</label>
                <img id="img_hienthi" class="img-thumbnail" alt="" style="width: 300px; height: 200px;object-fit: contain">
            </div>
            <div class="form-group">
                <label asp-for="MaDvt" class="control-label"></label>
                <select asp-for="MaDvt" class ="form-control" asp-items="@Model.donViTinhs"></select>
                <span asp-validation-for="MaDvt" class="text-danger d-block"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/upload_img.js"></script>
}
